<%= form_for(@task) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :details %>
    <%= form.text_field :details %>
  </div>
  <%= form.submit "Add Task" %>
<% end %>



